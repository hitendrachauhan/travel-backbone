<h1>New place</h1>

<form id="new-place" name="place" enctype="multipart/form-data">
  <div class="control-group">
    <label for="name" class="control-label"> Name:</label>
    <div class="controls">
      <input type="text" name="name" id="name" value="<%= name %>" class="form-control">
    </div>  
  </div>

  <div class="control-group">
    <label for="description" class="control-label"> Description:</label>
    <div class="controls">
      <input type="text" name="description" id="description" value="<%= description %>" class="form-control">
    </div>
  </div>

  <div class="control-group">
    <label for="state_id" class="control-label">  State id:</label>
    <div class="controls">
      <input type="text" name="state_id" id="state_id" value="<%= state_id %>" class="form-control">
    </div>
  </div>

  <div class="control-group">
    <label for="code" class="control-label"> Code:</label>
    <div class="controls">
      <input type="text" name="code" id="code" value="<%= code %>" class="form-control">
    </div>
  </div>

  <br/>
  <div class="control-group">
    <div class="controls">
      <input type="submit" class="btn btn-primary" value="Create Place" />
      <a href="#/districts" class="btn btn-default">Cancel</a>
    </div>
  </div>

</form>
